    "eslint-plugin-prettier": "^5.4.1",
    "graphql-tag": "^2.12.6",
    "husky": "^8.0.0",
    "jest": "^30.0.0",
    "prettier": "^3.5.3",
    "supertest": "^7.1.1",
    "ts-jest": "^29.4.0",
